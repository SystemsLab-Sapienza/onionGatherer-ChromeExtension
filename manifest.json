{

  "manifest_version": 2,

  "name": "Onion Gatherer",

  "description": "This extension allows to check the status of hidden services found in the websites",

  "version": "0.0.0.1",

  "permissions": ["activeTab", "*://*/*", "contextMenus"],

  "web_accessible_resources": ["greenCircle.png", "redCircle.png", "orangeCircle.png"],

  "browser_action": {
    "default_icon": "onion.png",
    "default_popup": "popup.html"
  },

  "icons": {
    "128": "onion_128.png"
  },

  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  }
}
